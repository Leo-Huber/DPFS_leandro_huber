<%- include('../partials/head') %>
  <%- include('../partials/header') %>

    <main>
      <h2>
        <%= product.name %>
      </h2>
      <img src="<%= product.image %>" alt="<%= product.name %>"
        style="max-width:100%;border-radius:var(--radius);margin-bottom:1rem;">
      <p>
        <%= product.description %>
      </p>
      <p>Categoría: <strong>
          <%= product.category %>
        </strong></p>
      <p>Precio: <strong>$<%= Number(product.price).toFixed(2) %></strong></p>
      <a href="/products" class="back-link">← Volver a todos los productos</a>
      <form action="/cart/add/<%= product.id %>" method="POST">
        <button type="submit">Agregar al carrito</button>
      </form>
    </main>

    <%- include('../partials/footer') %>